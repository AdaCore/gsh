library project Lua is
    for Library_Name use "lua";
    for Object_Dir use "obj";
    for Library_Dir use "lib";
    for Languages use ("C");
    for Source_Dirs use ("src");

    package Compiler is
       for Default_Switches ("C") use ("-Wall", "-O2", "-DLUA_COMPAT_ALL");
    end Compiler;

end Lua;
